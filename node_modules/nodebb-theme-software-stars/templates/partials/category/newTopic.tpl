<noscript>
  <div class="dropdown" component="category-selector"></div>
</noscript>

<!-- New Topic Button -->
<button component="category/post" for="category-dropdown-check" class="btn btn-primary btn-sm text-nowrap" id="new_topic" role="button">
  [[category:new-topic-button]]
</button>

<noscript>
  <input type="checkbox" class="hidden" id="category-dropdown-check" aria-hidden="true">
  
  <!-- Dropdown Menu for Category Selection -->
  <ul component="category/list" class="dropdown-menu p-1 text-sm category-dropdown-menu ghost-scrollbar" role="menu">
    {{{each categories}}}
    <li role="presentation" class="category {{{if categories.disabledClass}}}disabled{{{end}}}">
      <a role="menu-item" href="{config.relative_path}/compose?cid={categories.cid}">
        {categories.level}
        <span component="category-markup">
          <div class="category-item d-inline-block">
            {buildCategoryIcon(@value, "24px", "rounded-circle")}
            {categories.name}
          </div>
        </span>
      </a>
    </li>
    {{{end}}}

    <!-- Anonymous Posting Option -->
    <li role="presentation" class="dropdown-divider"></li> <!-- Optional Divider -->
    <li role="presentation" class="anonymous-option">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="anonymous-checkbox" name="anonymous">
        <label class="form-check-label" for="anonymous-checkbox">
          Post anonymously
        </label>
      </div>
    </li>
  </ul>
</noscript>

